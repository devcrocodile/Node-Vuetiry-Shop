{
    "extends": ["airbnb", "prettier", "plugin:node/recommended"],
    "plugins": ["prettier"],
    "rules": {
        "indent": ["error", 4],
        "space-before-function-paren": 0,
        "no-console": 0,
        "func-names": 0,
        "no-undef": 0,
        "node/no-unpublished-require": 0,
        "consistent-return": 0,
        "no-restricted-globals": 0,
        "prettier/prettier": [
          "error",
          {
              "trailingComma": "es5",
              "singleQuote": true,
              "printWidth": 100,
              "tabWidth": 4
        }
      ],
      "no-unused-vars": [
        1,
        {
          "ignoreSiblings": true,
          "argsIgnorePattern": "res|next|^err"
        }
      ]
    }
}